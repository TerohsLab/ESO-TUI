<GuiXml>

    <Controls>

        <TopLevelControl name="UnitFramesInfoRight" clampedToScreen="true" mouseEnabled="false" movable="false" hidden="false">

            <Dimensions x="250" y="20" />
            <Anchor point="BOTTOMRIGHT" relativeTo="GuiRoot" relativePoint="BOTTOMRIGHT" />

            <Controls>

                <Control name="$(parent)Block">

                    <Dimensions x="250" y="20" />
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />

                    <Controls>

                        <Backdrop name="$(parent)Border" edgeColor="1a1a1a" centerColor="1a1a1a" alpha="1" layer="0" level="1" hidden="false">

                            <Dimensions x="300" y="20" />
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
                            <Edge edgeSize="1" />

                        </Backdrop>

                        <Backdrop name="$(parent)Backdrop" edgeColor="1a1a1a" centerColor="1a1a1a" alpha="1" layer="0" level="0">

                            <Dimensions x="300" y="20" />
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" />
                            <Edge edgeSize="0" />

                        </Backdrop>

                        <Label name="$(parent)GoldLabel" font="ZoFontWinH4" color="ffffff" scale="0.8">

                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="10" />

                        </Label>

                        <Label name="$(parent)FPSLabel" font="ZoFontWinH4" color="ffffff" scale="0.8">

                            <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="10" />

                        </Label>

                        <Label name="$(parent)PingLabel" font="ZoFontWinH4" color="ffffff" scale="0.8">

                            <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="10" />

                        </Label>

                        <Label name="$(parent)TimeLabel" font="ZoFontWinH4" color="ffffff" scale="0.8">

                            <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-10" />

                        </Label>

                    </Controls>

                </Control>

            </Controls>

        </TopLevelControl>

    </Controls>

</GuiXml>