<GuiXml>
    <Controls>
        <TopLevelControl name="UnitFramesInfoLeft" clampedToScreen="true" mouseEnabled="false" movable="false" hidden="true">
            <Dimensions x="300" y="20" />
            <Anchor point="BOTTOMLEFT" relativeTo="GuiRoot" relativePoint="BOTTOMLEFT"/>
            <Controls>
                <Control name="$(parent)Block">
                    <Dimensions x="300" y="20" />
                    <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
                    <Controls>
                        <Backdrop name="$(parent)Backdrop" edgeColor="1a1a1a" centerColor="1a1a1a" alpha="1" layer="0" level="0">
                            <Dimensions x="300" y="20" />
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
                            <Edge edgeSize="0" />
                        </Backdrop>

                        <Backdrop name="$(parent)Border" edgeColor="1a1a1a" centerColor="1a1a1a" alpha="1"  layer="0" level="1" hidden="false">
                            <Dimensions x="300" y="20" />
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
                            <Edge edgeSize="1" />
                        </Backdrop>
                    </Controls>
                </Control>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
